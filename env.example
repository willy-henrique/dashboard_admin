# ==== CORE ====
APP_ENV=development
NODE_ENV=development
PORT=3000
JWT_SECRET=changeme
JWT_EXPIRES_IN=24h

# ==== DATABASE ====
DB_URL=postgres://user:pass@localhost:5432/finance
DB_USER=user
DB_PASS=pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance

# ==== REDIS (QUEUE) ====
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==== BANK INTEGRATION ====
BANK_API_BASE_URL=https://api.sandbox.bank.com
BANK_API_KEY=
BANK_WEBHOOK_SECRET=
BANK_CLIENT_ID=
BANK_CLIENT_SECRET=
BANK_CERT_PATH=./secrets/bank_cert.p12
BANK_CERT_PASS=

# ==== FISCAL INTEGRATION ====
NFE_API_BASE_URL=https://api.sandbox.nfe.com
NFE_API_KEY=
NFE_CERT_PATH=./secrets/nfe.p12
NFE_CERT_PASS=
NFE_AMBIENTE=2
NFE_EMPRESA_CNPJ=

NFSE_API_BASE_URL=https://api.sandbox.nfse.com
NFSE_API_KEY=
NFSE_CERT_PATH=./secrets/nfse.p12
NFSE_CERT_PASS=
NFSE_AMBIENTE=2
NFSE_EMPRESA_CNPJ=

# ==== PAYMENTS INTEGRATION ====
PAYMENTS_API_BASE_URL=https://api.sandbox.payments.com
PAYMENTS_API_KEY=
PAYMENTS_CLIENT_ID=
PAYMENTS_CLIENT_SECRET=
PIX_CERT_PATH=./secrets/pix_cert.pem
PIX_CERT_PASS=

# ==== COMMUNICATIONS ====
EMAIL_API_KEY=
EMAIL_FROM=noreply@empresa.com
EMAIL_TEMPLATE_PATH=./templates/email

SMS_API_KEY=
SMS_FROM=EMPRESA
SMS_WEBHOOK_URL=

# ==== STORAGE ====
STORAGE_BUCKET=finance-docs
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=

# ==== OAUTH ====
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:3000/auth/google/callback

OAUTH_MICROSOFT_CLIENT_ID=
OAUTH_MICROSOFT_CLIENT_SECRET=
OAUTH_MICROSOFT_REDIRECT_URL=http://localhost:3000/auth/microsoft/callback

# ==== FEATURE FLAGS ====
FEATURE_BANK=true
FEATURE_NFE=true
FEATURE_NFSE=true
FEATURE_PAYMENTS=true
FEATURE_EMAIL=true
FEATURE_SMS=true
FEATURE_STORAGE=true
FEATURE_OAUTH=true
FEATURE_SANDBOX=true

# ==== GOOGLE MAPS ====
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==== OBSERVABILITY ====
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=finance-system

# ==== SECURITY ====
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# ==== WEBHOOKS ====
WEBHOOK_BANK_URL=http://localhost:3000/api/webhooks/bank
WEBHOOK_PAYMENTS_URL=http://localhost:3000/api/webhooks/payments
WEBHOOK_FISCAL_URL=http://localhost:3000/api/webhooks/fiscal

# ==== SCHEDULER ====
SCHEDULE_CONCILIATION=0 1 * * *
SCHEDULE_CLOSING=0 0 1 * *
SCHEDULE_REPORTS=0 6 * * 1

# ==== ENCRYPTION ====
ENCRYPTION_KEY=changeme
ENCRYPTION_ALGORITHM=aes-256-gcm

