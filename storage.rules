rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Documentos de verificação de prestadores
    match /Documentos/{userId}/{allPaths=**} {
      // Leitura pública (URLs com token funcionarão e a UI pode listar)
      allow read: if true;
      // Escrita apenas autenticado e somente na própria pasta
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Bloquear acesso ao restante do bucket por padrão
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
